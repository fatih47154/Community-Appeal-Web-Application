
@{
    ViewBag.Title = "form7";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using Community_Appeal_Web_Application.Models

@model Basvuru

@{
    if (Model != null)
    {
        if (TempData["YönetimHata"] != null)
        {
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@TempData["YönetimHata"]</strong>
            </div>
        }
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Yönetim Kurulu
                    </header>
                    <div class="panel-body">
                        <form role="form" method="post" action="/Home/form7YonetimKuruluKaydet">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Açılış Yapan Kişi</label>
                                        <select class="form-control" id="list" name="marscı">
                                            <option>Açılış Yapan Kişiyi Seçiniz...</option>
                                            @foreach (var item in Model.OgrenciListesi.ToList())
                                            {
                                                <option value="@item.adi @item.soyadi">@item.adi<span> </span>@item.soyadi</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Üye Sayısı</label>
                                        <input name="uyeSayisi" class="form-control" placeholder="Üye Sayısı Giriniz..." />
                                    </div>

                                    <div class="form-group">
                                        <label>Divan Başkanı</label>
                                        <select class="form-control" id="list" name="divanBasId">
                                            <option>Divan Başkanı Seçiniz...</option>
                                            @foreach (var item in Model.OgrenciListesi.ToList())
                                            {
                                                <option value="@item.ID">@item.adi<span> </span>@item.soyadi</option>
                                            }
                                        </select>
                                    </div>

                                    
                                </div>
                                <div class="col-lg-6">

                                    <div class="form-group">
                                        <label>Başkan Yardımcısı</label>
                                        <select class="form-control" id="list" name="baskanYarId">
                                            <option>Başkan Yardımcısı Seçiniz...</option>
                                            @foreach (var item in Model.OgrenciListesi.ToList())
                                            {
                                                <option value="@item.ID">@item.adi<span> </span>@item.soyadi</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Yazman</label>
                                        <select class="form-control" id="list" name="yazmanId">
                                            <option>Yazman Başkanı Seçiniz...</option>
                                            @foreach (var item in Model.OgrenciListesi.ToList())
                                            {
                                                <option value="@item.ID">@item.adi<span> </span>@item.soyadi</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Sekreter</label>
                                        <select class="form-control" id="list" name="sekreterId">
                                            <option>Sekreter Seçiniz...</option>
                                            @foreach (var item in Model.OgrenciListesi.ToList())
                                            {
                                                <option value="@item.ID">@item.adi<span> </span>@item.soyadi</option>
                                            }
                                        </select>
                                    </div>

                                </div>
                            </div>                       
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Yönetim Kuruluna Üye Ekle</label>
                                        <select onchange="myFunction()" class="form-control" id="ogrenci">
                                            <option>Üye Seçiniz...</option>
                                            @foreach (var item in Model.OgrenciListesi.ToList())
                                            {
                                                <option value="@item.ID">@item.adi<span> </span>@item.soyadi</option>
                                            }
                                        </select>
                                    </div>
                                    <button type="submit" style="margin-right: 5px;" class="btn btn-info">Yönetim Kurulunu Kaydet</button>
                                    <a href="#" id="ekle" class="btn btn-success" style="margin-right: 5px;"><i class="glyphicon-plus"></i> Üye Ekle</a>
                                </div>
                                
                            </div>
                        </form>
                    </div>
                </section>
            </div>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Denetim Kurulu
                    </header>
                    <div class="panel-body">
                        <form role="form" method="post" action="/Home/form6">
                            
                            <div class="form-group">
                                <label>Denetim Kurulu Başkanı</label>
                                <select class="form-control" id="list" name="ID">
                                    <option>Denetim Kurulu Başkanını Seçiniz...</option>
                                    @foreach (var item in Model.OgrenciListesi.ToList())
                                    {
                                        <option value="@item.ID">@item.adi<span> </span>@item.soyadi</option>
                                    }
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label>Denetim Kuruluna Üye Ekle</label>
                                <select class="form-control" id="list">
                                    <option>Üye Seçiniz...</option>
                                    @foreach (var item in Model.OgrenciListesi.ToList())
                                    {
                                        <option value="@item.ID">@item.adi<span> </span>@item.soyadi</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" style="margin-right: 5px;" class="btn btn-info">Denetim Kurulunu Kaydet</button>
                            <a id="ekle" class="btn btn-success"><i class="glyphicon-plus"></i> Üye Ekle</a>
                            @{
                                if (Model.adimNo == 6)
                                {
                                    <a href="#" style="margin-left: 5px;" class="btn btn-primary">Form 7</a>
                                }
                            }

                        </form>
                    </div>
                </section>
            </div>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Form 7
                    </header>
                    <section class="panel-body" style="padding-left: 90px; padding-right: 90px">
                        <div style="float: right;">
                            <p style="text-indent: 35.4pt;"><span style="font-size: 12.0pt;font-family: 'Times New Roman', serif;">Ek-7</span></p>
                        </div>
                        <br /><br />
                        <br /><br />
                        <div style="text-align: center;">
                            <p style="">
                                <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif;">
                                    DÜZCE ÜNİVERSİTESİ <b>@Model.toplulukAdi TOPLULUĞU</b><br/>
                                    OLAĞAN/OLAĞANÜSTÜ GENEL KURUL TUTANAĞI<br/>
                                    <b>@DateTime.Now.ToShortDateString()</b>
                                </span>
                            </p>
                        </div>
                        <br />
                        <div style="">
                            <p style="text-indent: 35.4pt;">
                                <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif;text-align: justify">
                                    Düzce Üniversitesi <b>@Model.toplulukAdi</b> Topluluğu 
                                    <b>@Model.toplantiTarihi.ToString().Substring(0, 10)</b>
                                    Tarihinde saat <b>@Model.saat</b>'de <b>@Model.mekan</b>'de,
                                    <b>@Model.toplantiNo</b>'ıncı (birinci, ikinci, üçüncü vb.) olağan
                                    genel kurul toplantısı gerçekleştirilmiştir.
                                    <br /><br />
                                    Gündemin birinci maddesi gereği, genel kurul toplantısı <b>@Model.OgrenciListesi.Count()</b>
                                    üye ile ………………………………………… (kişi ismi yazılacak) tarafından açıldı.
                                </span>
                            </p>
                            
                            <p style="text-indent: 35.4pt;">
                                <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif; text-align: justify">
                                    Açılış ve yoklama gerçekleştikten sonra ……………………………..….. (kişi ismi yazılacak) katılanları
                                    saygı duruşunda bulunmaya ve İstiklal Marşı’nı söylemeye davet etti.
                                    <br /><br />
                                    Gündemin ikinci maddesi gereği, toplantıyı yönetmek üzere Divan Kurulu oluşturuldu.
                                    Divan Başkanlığı’na …………………………….… (kişi ismi yazılacak), Başkan Yardımcılığına …..…………………….……
                                    (kişi ismi yazılacak), Yazman üyeliğine ………………………….…… (kişi ismi yazılacak) seçildi.
                                </span>
                            </p>
                            
                            <p style="text-indent: 35.4pt;">
                                <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif; text-align: justify">
                                    Gündemin üçüncü maddesi gereği, …………………………… Akademik yılında gerçekleştirilecek etkinlikler
                                    belirlenmiştir. (Burada gerçekleştirilecek etkinlikler anlatılacaktır.)
                                </span>
                            </p>
                            
                            <p style="text-indent: 35.4pt;">
                                <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif; text-align: justify">
                                    Gündemin dördüncü maddesi gereği, bütçe önerisi görüşüldü. (Burada gerçekleştirilecek
                                    etkinlikler için bütçeden bahsedilecek.)
                                </span>
                            </p>
                            
                            <p style="text-indent: 35.4pt;">
                                <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif; text-align: justify">
                                    Gündemin beşinci maddesi gereği, Divan Başkanı ………………………………. (kişi ismi yazılacak)
                                    yönetim kurulunun ibrazının gerektiğini belirtti.
                                </span>
                            </p>
                            
                            <p style="text-indent: 35.4pt;">
                                <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif; text-align: justify">
                                    Gündemin altıncı maddesi gereği, yönetim kurulunun, denetleme kurulunun,
                                    (topluluk tüzüğünde belirtilen başka kurul varsa burada yazılacak) seçimine 
                                    Divan Başkanı …………………………… (kişi ismi yazılacak) başkanlığında geçildi.
                                </span>
                            </p>
                            
                            <p style="text-indent: 35.4pt;">
                                <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif; text-align: justify">
                                    Yönetim Kurulu için gerekli koşulları ve görevlerini Divan Başkanı ……………………….... (kişi ismi yazılacak)
                                    üyelere anlattıktan sonra Yönetim Kurulu’na üye olmak isteyen kişiler kendilerini tanıttı.
                                    Yönetim Kurulu üyesi olmak isteyen kişiler aşağıdadır:
                                </span>
                            </p><br/>
                            
                            <div class="append">
                                @{
                                    Html.RenderAction("uyeListesiWidget");
                                }
                            </div><br/>
                            
                            <p style="text-indent: 35.4pt;">
                                <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif; text-align: justify">
                                    Divan Başkanı …….. (kişi ismi yazılacak) yönetim kurulu üyesi olmak isteyen üyelere Yönetim Kurulu’nun
                                    ………………….. (topluluk tüzüğünde belirtilen yönetim kurulu üyelerinin neler olduğu ve kaç kişiden oluştuğu
                                    yazılacak) oluştuğunu söyledikten sonra üyelere söz vererek talep ettikleri kurul üyeliğini sordu.
                                    Buna göre Yönetim Kurulu şu kişilerden oluşmuştur; (Burada kurul üyeliklerine kimlerin seçildiği
                                    yazılacak)  
                                </span>
                            </p><br />
                            
                            <table class="table" style="width: 70%; margin: auto; border: solid; border: solid; border-color:lightgrey;border-width: 2px">
                                <thead>
                                <tr>
                                    <th>Sıra No</th>
                                    <th>Görev Adı</th>
                                    <th>Adı Soyadı</th>
                                    <th>Sil</th>
                                </tr>
                                </thead>
                                <tbody class="kisi">
                                @{
                                    int i = 1;
                                    <tr>
                                        <td>@i</td>
                                        <td>Başkan</td>
                                        <td>@Model.baskanAdi @Model.baskanSoyadi</td>
                                        <td></td>
                                    </tr>

                                    foreach (var item in ViewBag.yk1)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.unvan</td>
                                            <td>@item.adi @item.soyadi</td>
                                            <td class="sil"><a href="/Home/uyeListesiSil/@item.ID" class="btn btn-danger btn-xs itemDelete"> <i class="icon-trash"> Sil</i></a></td>
                                        </tr>
                                    }
                                }
                                </tbody>
                            </table>

                        </div>
                        <br />
                        
                        <p style="text-indent: 35.4pt;">
                            <span style="font-size: 12.0pt; font-family: 'Times New Roman', serif; text-align: justify">
                                Yönetim Kurulu seçiminin ardından Denetleme Kurulu seçimine geçilmiştir.
                                Yapılan seçimin ardından Denetleme Kurulu şu kişilerden oluşmuştur;
                            </span>
                        </p>
                        
                        <table class="table" style="width: 70%; margin: auto; border: solid; border: solid; border-color:lightgrey;border-width: 2px">
                            <thead>
                            <tr>
                                <th>Sıra No</th>
                                <th>Görev Adı</th>
                                <th>Adı Soyadı</th>
                                <th>Sil</th>
                            </tr>
                            </thead>
                            <tbody class="kisi">
                            @{
                                int a = 1;
                                foreach (var item in ViewBag.dk)
                                {
                                    a++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.unvan</td>
                                        <td>@item.adi @item.soyadi</td>
                                        <td class="sil"><a href="#" class="btn btn-danger btn-xs itemDelete"> <i class="icon-trash"> Sil</i></a></td>
                                    </tr>
                                }
                            }
                            </tbody>
                        </table>

                    </section>
                </section>
            </div>
        </div>

    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <strong><p style="font-size:18px;"> @ViewBag.Hata</p></strong>
        </div>
    }
}

<script>

    function myFunction() {
        var selector = document.getElementById('ogrenci');
        var valuea = selector[selector.selectedIndex].value;
        document.getElementById('ekle').href = "/Home/yonetimKuruluUyeEkle/" + valuea;
    }

</script>