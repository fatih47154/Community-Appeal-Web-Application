
@{
    ViewBag.Title = "Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Community_Appeal_Web_Application.Models

@model List<Admin>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Admin Listesi
                <a class="btn btn-primary" style="float:right;margin-bottom:10px;">Yeni Kullanıcı Ekle</a>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Adı Soyadı</th>
                        <th>Mail Adresi</th>
                        <th style="float:right;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.adi @item.soyadi</td>
                        <td>@item.eMail</td>
                        <td >
                            <button style="float:right;" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></button>
                            <button style="float:right;" class="btn btn-danger btn-xs"><i class="icon-trash "></i></button>
                        </td>
                    </tr>
                    }                                    
                </tbody>
            </table>
        </section>
    </div>
</div>

