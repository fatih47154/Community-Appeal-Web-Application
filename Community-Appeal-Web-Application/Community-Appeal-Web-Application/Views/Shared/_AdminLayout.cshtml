@using Community_Appeal_Web_Application.Models

@{
    Admin user = (Admin)Session["Admin"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/Content/img/favicon.png">

    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="/Content/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="/Content/css/style.css" rel="stylesheet">
    <link href="/Content/css/style-responsive.css" rel="stylesheet" />

    @RenderSection("head", false)
</head>

<body>

    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="/Content/index.html" class="logo">ABC<span>LOGO</span></a>
            <!--logo end-->

            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">

                    <!-- user login dropdown start-->
                    <a href="#" class="btn btn-default">@user.adi @user.soyadi</a>
                    <a href="/Admin/CikisYap" class="btn btn-danger">Çıkış Yap <i class="icon-arrow-right"></i></a>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a class="active" href="/Content/index.html">
                            <i class="icon-dashboard"></i>
                            <span>Anasayfa</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="/Content/javascript:;">
                            <i class="icon-laptop"></i>
                            <span>Yönetici İşlemleri</span>
                        </a>
                        <ul class="sub">
                            <li><a href="/Admin/Listesi">Admin Listesi</a></li>
                            <li><a href="/Admin/Ekle">Admin Ekle</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Admin/Basvurular">
                            <i class="icon-book"></i>
                            <span>Başvuru Listesi</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/gunceller">
                            <i class=" icon-exchange"></i>
                            <span> Güncelleme Listesi</span>
                        </a>
                    </li>

                    <li>
                        <a href="/Admin/KayitliKullanicilar">
                            <i class=" icon-user"></i>
                            <span>Kayıtlı Kullanıcılar </span>
                        </a>
                    </li>                   
                    <!--multi level menu end-->

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">

                @RenderBody()


            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                2013 &copy; FlatLab by VectorLab.
                <a href="/Content/#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/js/jquery.js"></script>
    <script src="/Content/js/jquery-1.8.3.min.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/Content/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/Content/js/jquery.scrollTo.min.js"></script>
    <script src="/Content/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/Content/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="/Content/js/owl.carousel.js"></script>
    <script src="/Content/js/jquery.customSelect.min.js"></script>
    <script src="/Content/js/respond.min.js"></script>

    <script class="include" type="text/javascript" src="/Content/js/jquery.dcjqaccordion.2.7.js"></script>

    <!--common script for all pages-->
    <script src="/Content/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="/Content/js/sparkline-chart.js"></script>
    <script src="/Content/js/easy-pie-chart.js"></script>
    <script src="/Content/js/count.js"></script>

    <!--Angular js-->

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>


    <script>

        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

    </script>
    @RenderSection("script", false)

</body>
</html>
